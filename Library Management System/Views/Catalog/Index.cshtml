@model IEnumerable<Library_Management_System.Models.CatalogVM>

@{
    ViewData["Title"] = "Index";
}
<h1>Catalog Listing</h1>
<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.UniqueCatalogCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedDate)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Firstname)@Html.DisplayFor(modelItem => item.Author.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Firstname)@Html.DisplayFor(modelItem => item.Publisher.Lastname)
                </td>   
                <td>
                    @Html.DisplayFor(modelItem => item.UniqueCatalogCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedDate)
                </td>
               
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you that you want to delete this record?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script>

        $(document).ready(function () {
            $('#tblData').DataTable();
        });

    </script>


}