@model IEnumerable<Library_Management_System.Models.LibraryRecordVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Library Record Listing </h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>

<table id="tblData" class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.CatalogId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerFirstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerLastname)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateIssued)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DateRecieved)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Catalog.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerFirstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerLastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRecieved)
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you that you want to delete this resume')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script>

        $(document).ready(function () {
            $('#tblData').DataTable();
        });

    </script>


}